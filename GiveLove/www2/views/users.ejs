<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title>Профиль</title>
    <link rel="stylesheet" href="/assets/style.css">
</head>

<body>
    <header id="header" class="headerUsers">
        <div>
            <img id="icon" style="vertical-align: middle;" src="/assets/dragon_icon.jpg" width="100" height="100">
            <a id="name">GiveLove</a>
            <form id="exit" action='/exit' method="post">
                <input type="submit" value="Выход">
            </form>
        </div>
        <div class="map">
            <a href="/users">Список пользователей</a>
            <a href="/horoscope">Гороскоп</a>
            <a href="/profile">Личный профиль</a>
        </div>
        <div>
            <form name="myform">
                <select name="selectedUsers">
                    <option>Все аккаунты</option>
                    <option>Пользователи</option>
                    <option>Модераторы</option>
                    <option>Администраторы</option>
                </select>
            </form>
        </div>
        <form name="find" class="find">
            <input name="textFind" type="text">
            <input name="submitFind" type="submit" value="Поиск">
        </form>
    </header>
    <main>
        <% users.forEach(function(user){ %>
            
            <div class="Users" >
                
                <div class="Users_id">
                    <span class="UserID"><%= user.id%></span>
                </div>
                <a href="/users/<%= user.id%>">
                    <img class="setting" src="/assets/setting.jpg">
                </a>
                <a href="/messages/<%= user.id%>" class="hrefuser">
                <div class="Users_info">
                    <img src="/assets/avatars/<%=user.value.avatar%>" width="150px" height="150px">
                    <div style="display: inline-block;" class="Users_data">
                        <div>
                            <span class="UserFIO"><%= user.value.name %> <%= user.value.fathername %> <%= user.value.surname %></span>
                        </div>
                        <div>
                            <span><%= user.value.date %></span>
                        </div>
                        <div>
                            <span><%= user.value.gender %></span>
                        </div>
                        <div>
                            <img src="/assets/<%=user.value.ZZ%>.jpg" width="20px" height="20px">
                            <span><%= user.value.ZZ %></span>
                        </div>
                        <%if (user.value.role == "administrator"){%>
                            <div class="id1">
                                <span>Администратор</span>
                            </div>
                            <%}%>
                                <% if (user.value.role == "moderator"){%>
                                    <div class="id2">
                                        <span>Модератор</span>
                                    </div>
                                    <%}%>
                                        <% if (user.value.role == "user"){%>
                                            <div class="id3">
                                                <span>Пользователь</span>
                                            </div>
                                            <%}%>
                    </div>
                </div>
            </a>
            </div>
            <%});%>

    </main>
</body>
<%- include('blocks/footer') -%>
    <script src="/assets/users.js"></script>

</html>